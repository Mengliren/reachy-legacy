<?xml version="1.0"?>
<robot name="Reachy">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>

  <link name="base">
    <visual>
      <geometry>
        <box size="0.1 0.05 0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="shoulder">
    <visual>
      <geometry>
        <box size="0.1 0.025 0.025"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <link name="shoulder_to_arm">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <link name="upper_arm">
    <visual>
      <geometry>
        <box size="0.025 0.025 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <link name="forearm">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <link name="wrist">
    <visual>
      <geometry>
        <box size="0.025 0.025 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <link name="wrist_hand">
    <visual>
      <geometry>
        <box size="0.025 0.025 0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="blue"/>
    </visual>
  </link>

  <link name="hand_ball">
    <visual>
      <geometry>
        <box size="0.0125 0.0125 0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="white"/>
    </visual>
  </link>

  <link name="ball">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <material name="red"/>
    </visual>
  </link>

  <joint name="shoulder_pitch" type="revolute">
    <parent link="base"/>
    <child link="shoulder"/>
    <origin rpy="0 0 0" xyz="0 0.0887 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.5708" upper="3.14159"/>
  </joint>

  <joint name="shoulder_roll" type="revolute">
    <parent link="shoulder"/>
    <child link="shoulder_to_arm"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.174533" upper="3.14159"/>
  </joint>

  <joint name="arm_yaw" type="revolute">
    <parent link="shoulder_to_arm"/>
    <child link="upper_arm"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.5708" upper="1.5708"/>
  </joint>

  <joint name="elbow_pitch" type="revolute">
    <parent link="upper_arm"/>
    <child link="forearm"/>
    <origin rpy="0 0 0" xyz="0 0 -0.30745"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.18166" upper="0"/>
  </joint>

  <joint name="forearm_yaw" type="revolute">
    <parent link="forearm"/>
    <child link="wrist"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.61799" upper="2.61799"/>
  </joint>

  <joint name="wrist_pitch" type="revolute">
    <parent link="wrist"/>
    <child link="wrist_hand"/>
    <origin rpy="0 0 0" xyz="0 0 -0.22415"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.22173" upper="1.22173"/>
  </joint>

  <joint name="wrist_roll" type="revolute">
    <parent link="wrist_hand"/>
    <child link="hand_ball"/>
    <origin rpy="0 0 0" xyz="0 0 -0.03243"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.0472" upper="1.0472"/>
  </joint>

</robot>